<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="LoadingDialog" parent="@android:style/Theme.Dialog">

        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <!-- 设置背景色 透明-->
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 设置是否显示背景 -->
        <item name="android:backgroundDimEnabled">false</item>
        <!-- 设置背景透明度 -->
        <!--        <item name="android:backgroundDimAmount">0.6</item>-->
        <!-- 设置点击空白不消失 -->
        <item name="android:windowCloseOnTouchOutside">false</item>
    </style>

    <style name="bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/bg</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="empty_img">
        <item name="android:layout_width">@dimen/dp50</item>
        <item name="android:layout_height">@dimen/dp50</item>
        <item name="android:layout_marginBottom">10dp</item>
    </style>


    <declare-styleable name="CircleImageView">
        <attr name="civ_border_width" format="dimension" />
        <attr name="civ_border_color" format="color" />
        <attr name="civ_border_overlay" format="boolean" />
        <attr name="civ_circle_background_color" format="color" />
    </declare-styleable>

    <declare-styleable name="CustomViewPager">
        <attr name="scrollable" format="boolean" />
        <attr name="fixHeight" format="boolean" />
    </declare-styleable>

    <!--星级评分控件-->
    <declare-styleable name="RatingBar">
        <!--总共最大的星级数，默认为5-->
        <attr name="srb_numStars" format="integer" />
        <!--最小星级数，默认为0-->
        <attr name="srb_minimumStars" format="float" />
        <!--当前的星级，默认为0-->
        <attr name="srb_rating" format="float" />
        <!--星星之间的间距，默认20px-->
        <attr name="srb_starPadding" format="dimension" />
        <!--星星为空时的图案，默认R.drawable.srb_ic_empty-->
        <attr name="srb_drawableEmpty" format="reference" />
        <!--星星填充时的图案，默认R.drawable.srb_ic_filled-->
        <attr name="srb_drawableFilled" format="reference" />
        <!--是否只是指示器，不可以评分？默认false-->
        <attr name="srb_isIndicator" format="boolean" />
        <!--是否可以滑动设置评分，默认true-->
        <attr name="srb_scrollable" format="boolean" />
        <!--是否可以点击设置评分，默认true-->
        <attr name="srb_clickable" format="boolean" />
        <!--重复点击是否可以清空评分，默认true-->
        <attr name="srb_clearRatingEnabled" format="boolean" />
        <!--星星的宽度，默认WRAP_CONTENT-->
        <attr name="srb_starWidth" format="dimension" />
        <!--星星的高度，默认WRAP_CONTENT-->
        <attr name="srb_starHeight" format="dimension" />
        <!--星星的进度单位，默认是1-->
        <attr name="srb_stepSize" format="float" />
    </declare-styleable>

</resources>